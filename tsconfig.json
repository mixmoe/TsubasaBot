{
    "compilerOptions": {
        "module": "CommonJS",
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "lib": [
            "ES2019.Object"
        ]
    },
    "ts-node": {
        "transpileOnly": true,
        "transpiler": "ts-node/transpilers/swc-experimental"
    }
}